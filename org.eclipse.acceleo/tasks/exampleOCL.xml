<?xml version="1.0" encoding="UTF-8"?>
<project default="exampleOCL" name="org.eclipse.acceleo">
    <property name="ECLIPSE_HOME" value="../../../eclipse-neon/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="org.eclipse.acceleo.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/org.eclipse.acceleo/bin"/>
    </path>

    <path id="org.eclipse.acceleo.classpath">
        <path refid="org.eclipse.acceleo.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="org.eclipse.acceleo.libraryclasspath.alljars">
        <pathelement location="../org.eclipse.acceleo/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="org.eclipse.acceleo.classpath.alljars">
        <path refid="org.eclipse.acceleo.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="exampleOCL">
        <java classname="org.eclipse.acceleo.main.ExampleOCL" classpathref="org.eclipse.acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="exampleOCL.alljars">
        <java classname="org.eclipse.acceleo.main.ExampleOCL" classpathref="org.eclipse.acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
